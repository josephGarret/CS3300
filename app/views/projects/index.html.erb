<p id="notice"><%= notice %></p>
<%= render 'navBar', project: @project %>

<head>
  <title>Home Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="jumbotron.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <main role="main">
    <div class="jumbotron">
      <div class="container-fluid bg-dark text-white text-center">
        <h1 class="display-3">Welcome To Portfolio</h1>
        <p>
        "Welcome to my portfolio site! My name is Joseph Garrett"
        </p>
        <p>
          <a class="btn btn-primary btn-lg" href="#" role="button">See More!</a>
        </p>
      </div>
    </div>


  <div class="container mt-5">
    <div class="row">
    <% @projects.each do |project| %>
    <tr>
      <div class="col-sm-4">
        <div class="card body">

          <h3><td><%= project.title %></td></h3>
          <% if project.description.length > 100 %>
            <p class="card-text"><td><%= project.description.slice(0..100) ... %></td><p>
          <% else %>
            <p class="card-text"><td><%= project.description%></td> <p>
          <% end %>
          
          <td><%= link_to 'Show', project, class:"btn btn-primary" %></td>

          <% if user_signed_in? %>
            <td><%= link_to 'Edit', edit_project_path(project), class:"btn btn-primary" %></td>
            <td><%= link_to 'Destroy', project, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </div>
      </div>
    </tr>
    <% end %>
  </div>


  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
  <script src="../../assets/js/vendor/popper.min.js"></script>
  <script src="../../dist/js/bootstrap.min.js"></script>
</body>
      



